<div class="container">
    {{#if productos}}
    <p class="lead container text-center">Tenemos productos</p>
    <div class="card bg-dark mb-2" style="width: 100%;">
        <div class="card bg-dark border-secondary mt-2 mb-2" style="width: 100%;">
            <div class="input-group p-2">
                <input type="text" id="inputValues" class="form-control m-1" placeholder="titulo" aria-label="titulo"
                    aria-describedby="button-addon2">
                <input type="text" id="inputValues" class="form-control m-1" placeholder="descripcion"
                    aria-label="descripcion" aria-describedby="button-addon2">
                <input type="text" id="inputValues" class="form-control m-1" placeholder="code" aria-label="code"
                    aria-describedby="button-addon2">
                <input type="number" id="inputValues" class="form-control m-1" placeholder="precio" aria-label="precio"
