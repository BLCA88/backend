                <input type="number" id="inputValues" class="form-control m-1" placeholder="stock" aria-label="stock"
                    aria-describedby="button-addon2">
                <input type="text" id="inputValues" class="form-control m-1" placeholder="category"
                    aria-label="category" aria-describedby="button-addon2">
                <button class="btn btn-success m-1" type="button" id="button-addon2">AÃ±adir Producto
                    Nuevo</button>
            </div>
        </div>
        <div class="card bg-dark border-secondary  mb-2" style="width: 100%;">
            <div class="input-group p-2" style="width: 100%;">
                <input type="text" id="inputValuesU" class="form-control m-1" placeholder="titulo" aria-label="titulo"
                    aria-describedby="button-addon2">
                <input type="text" id="inputValuesU" class="form-control m-1" placeholder="descripcion"
                    aria-label="descripcion" aria-describedby="button-addon2">
                <input type="text" id="inputValuesU" class="form-control m-1" placeholder="code" aria-label="code"
                    aria-describedby="button-addon2">
                <input type="number" id="inputValuesU" class="form-control m-1" placeholder="precio" aria-label="precio"
                    aria-describedby="button-addon2">
                <input type="number" id="inputValuesU" class="form-control m-1" placeholder="stock" aria-label="stock"
                    aria-describedby="button-addon2">
                <input type="text" id="inputValuesU" class="form-control m-1" placeholder="category"
                    aria-label="category" aria-describedby="button-addon2">
                <button class="btn btn-primary m-1" type="button" id="button-updateon2">Modificar</button>
            </div>
        </div>
